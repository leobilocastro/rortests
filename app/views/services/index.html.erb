<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Title</th>
      <th>Price</th>
      <th>Detalhes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.description %></td>
        <td><%= service.title %></td>
        <td><%= service.price %></td>
        
        <td><%= link_to 'Show', service %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if can? :create, Service %>
<%=link_to 'New Service', new_service_path %>
<%end%>
