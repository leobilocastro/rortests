<p id="notice"><%= notice %></p>

<p>
  <strong>Service:</strong>
  <%= @contract.service.title %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @contract.start_time.to_date.strftime('%d/%m/%Y') %>
</p>


<p>
  <strong>Status do pagamento:</strong>
  <%= @contract.payment.approved ? 'Pago':'Em aberto'%>
</p>




<p>
  <strong>Observations:</strong>
  <%= @contract.observations %>
</p>


<%= form_tag('/payment',method: :post ) do %>
  <%=hidden_field_tag :quantidade%>
  <%=hidden_field_tag :valor%>
  <%= submit_tag "Efetuar Pagamento" %>
<%end%>
<%= link_to 'Back', contracts_path %>
